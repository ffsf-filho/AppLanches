<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppLanches.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppLanches"
    xmlns:pages="clr-namespace:AppLanches.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#a90409"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="FloralWhite">

    <TabBar>
        <Tab Title="Home" Icon="home_svg">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Title="Carrinho" Icon="shopping_cart_svg">
            <ShellContent ContentTemplate="{DataTemplate pages:CarrinhoPage}" />
        </Tab>
        <Tab Title="Favoritos" Icon="favorite_svg">
            <ShellContent ContentTemplate="{DataTemplate pages:FavoritosPage}" />
        </Tab>
        <Tab Title="Perfil" Icon="person_svg">
            <ShellContent ContentTemplate="{DataTemplate pages:PerfilPage}" />
        </Tab>
    </TabBar>

</Shell>
